<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NoteNote</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <a href="/" class="header-logo">NoteNote</a>
      </header>
      <div class="container">
        <div class="container-header">
          <h1>My Notes</h1>
          <a href="/new" class="new-button">+ Add Note</a>
        </div>
        <div class="index-table-wrapper">
          <div class="table-head">
            <span class="id-column">ID</span>
            <span>Note</span>
          </div>
          <ul class="table-body">
            <% var id = 1; %> 
            <% notes.forEach((note) => { %>
              <li>
                <div class="item-data">
                  <span class="id-column"><%= id++ %></span>
                  <span class="text-column"><%= note.text %></span>
                  <div class="item-menu">
                    <form action="/delete/<%= note.rowid %>" method="post">
                      <input type="submit" value="Delete">
                    </form>
                    <a href="/edit/<%= note.rowid %> ">Edit</a>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
      <script src="/scripts/script.js"></script>
</body>
</html>